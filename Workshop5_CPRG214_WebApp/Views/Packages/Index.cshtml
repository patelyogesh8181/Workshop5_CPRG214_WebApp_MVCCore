@model IEnumerable<Workshop5_CPRG214_WebApp.Models.Packages>

@{
    ViewData["Title"] = "Index";
}

<div class="hero-wrap" style="background-image: url('../../images/bg_2.jpg');height:300px !important">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center" data-scrollax-parent="true" style="height:440px !important;">
            <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                <span class="subheading">Special Offers</span>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tour Packages</h1>
            </div>
        </div>
    </div>
</div>

@if (ViewBag._Message != string.Empty)
{
    if (Convert.ToInt32(ViewBag._Message) == 1)
    {
        <div id="messagebox" style="display:block;">
            <div class="alert success">
                <span class="closebtn">×</span>
                <strong>Success!</strong> Packages insert successfully.
            </div>
        </div>
    }
}

