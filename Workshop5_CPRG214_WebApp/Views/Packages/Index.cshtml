<section class="ftco-section bg-light">
    <div class="container-fluid">
        <div class="row">
            @*<div class="col-md-6">*@
            <div class="row">
                @{int i = 1; }
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-4 ftco-animate fadeInUp ftco-animated">
                        <div class="destination">
                            <a href="javascript://" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(images/@(i).jpg);">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="icon-search2"></span>
                                </div>
                            </a>
                            <div class="text p-3">
                                <div class="d-flex">
                                    <div class="one">
                                        <h3><a href="#">@Html.DisplayFor(modelItem => item.PkgName)</a></h3>
                                        <p class="rate">
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star-o"></i>
                                            <span>8 Rating</span>
                                        </p>
                                    </div>
                                    <div class="two">
                                        <span class="price">@Html.DisplayFor(modelItem => item.PkgBasePrice)</span>
                                    </div>
                                </div>
                                <p>@Html.DisplayFor(modelItem => item.PkgDesc)</p>
                                <p class="days"><span>@Html.DisplayFor(modelItem => item.PkgStartDate)</span></p>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span><i class="icon-map-o"></i> @Html.DisplayFor(modelItem => item.PkgEndDate)</span>
                                    <span class="ml-auto"><a asp-action="Details" asp-controller="Packages" asp-route-id="@item.PackageId">Details</a></span>
                                    <span class="ml-auto"><a asp-action="Insert" asp-controller="Packages" asp-route-id="@item.PackageId">Order Now</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    i++;
                }
                @*</div>*@
            </div>
        </div>
    </div>
</section>

