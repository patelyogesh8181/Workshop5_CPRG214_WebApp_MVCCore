@model Workshop5_CPRG214_WebApp.Models.Customer

@{
    ViewData["Title"] = "Login";
}

<section class="ftco-section contact-section ftco-degree-bg">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Login</h2>
            </div>
        </div>

        @if (Convert.ToString(ViewBag._MessageNo) != null)
        {
            if (Convert.ToInt32(ViewBag._MessageNo) == 0)
            {
                <div class="alert warning">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    <strong>Warning!</strong> Invalid email address & password.
                </div>
            }
            else if (Convert.ToInt32(ViewBag._MessageNo) == -1)
            {
                <div class="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    <strong>Error!</strong> Please try again later.
                </div>
            }
        }

        <div class="row block-12">
            <div class="col-md-6 pr-md-5">
                <form asp-action="CheckLogin">
                    <div class="form-group">
                        <label asp-for="CustEmail" class="control-label">Email</label>
                        <input asp-for="CustEmail" class="form-control" placeholder="Email" required maxlength="50" />
                        <span asp-validation-for="CustEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordNotHashed" class="control-label">Password</label>
                        <input asp-for="PasswordNotHashed" class="form-control" placeholder="Password" required type="password" maxlength="20" />
                        <span asp-validation-for="PasswordNotHashed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary py-3 px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#ftco-navbar').removeClass('ftco-navbar-light');
    });
</script>